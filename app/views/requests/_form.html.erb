<%= form_with(model: request) do |form| %>
  <% if request.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(request.errors.count, "error") %> prohibited this request from being saved:</h2>

      <ul>
        <% request.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :item_id, "Select Item", style: "display: block" %>
    <%= form.collection_select :item_id, Item.all, :id, :name, { prompt: "Select an item" }, class: "form-control" %>
  </div>

  <div>
    <%= form.label :seeker_id, "Select Seeker", style: "display: block" %>
    <%= form.collection_select :seeker_id, User.where(role: 'seeker'), :id, :name, { prompt: "Select a seeker" }, class: "form-control" %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.text_field :status, class: "form-control" %>
  </div>

  <div>
    <%= form.label :duration, "Duration (in days)", style: "display: block" %>
    <%= form.number_field :duration, class: "form-control" %>
  </div>

  <div>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>